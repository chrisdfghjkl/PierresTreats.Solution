@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels

@model RegisterViewModel

<div class="content">
<h3>Register New User</h3>
<br>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { @class = "form-control", @style = "width:250px;" })
    <br>
    @Html.LabelFor(user=> user.Password)
    <p class="required">Passwords must be at least 6 characters in length and include an uppercase character (A-Z), a number (0-9), and a special character (!#$%^&*...)</p>
    @Html.PasswordFor(user=> user.Password, new { @class = "form-control", @style = "width:250px;" })
    <br>
    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control", @style = "width:250px;" })
    <br>
    <input type="submit" class="btn btn-primary" value="Register" />
}
<hr />
<p>@Html.ActionLink("Already have an account? Log in", "Login", "Account")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>