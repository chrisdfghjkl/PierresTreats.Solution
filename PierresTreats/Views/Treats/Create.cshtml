@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="content">
  <h3>Add New Treat</h3>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "width:250px;" })
    <br>
    <input type="submit" value="Add Treat" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to Treat List", "Index")</p>
</div>