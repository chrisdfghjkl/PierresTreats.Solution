@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="content">
  <h3>Treat Details</h3>
  <h5>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h5>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>No flavor description</p>
  }
  else
  {
    <div class="join_style">
      <h6>Flavor Profile:</h6>
      <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@join.Flavor.Name</li>
        @using (Html.BeginForm("DeleteFlavor", "Treats"))
        {
          @Html.Hidden("joinId", @join.FlavorTreatId)
          <input type="submit" value="Delete" class="btn-sm btn-primary"/>
        }
      }
      </ul>
    </div>
  }
  <hr />
  <p>@Html.ActionLink("Add Flavor", "AddFlavor", new { id = Model.TreatId })</p>
  <p>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</p>
  <p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</p>
  <p>@Html.ActionLink("Back to Treat List", "Index")</p>
</div>