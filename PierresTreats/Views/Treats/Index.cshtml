@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Treat>

<div class="content">
  <h3>Treats</h3>

@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
} 
else
{
  <h5>No treats have been added yet!</h5>
}
  <hr />
  <p>@Html.ActionLink("Add Treat", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>