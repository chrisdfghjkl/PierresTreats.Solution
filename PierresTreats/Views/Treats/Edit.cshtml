@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="content">
  <h3>Edit</h3>

  <h5>Edit Treat Details: @Html.DisplayFor(model => model.Name)</h5>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "width:250px;" } })
    <br>
    <input type="submit" value="Save" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to Treat List", "Index")</p>
</div>