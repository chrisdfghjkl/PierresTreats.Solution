@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<div class="content">
  <h3>Flavor Profiles Available:</h3>

  @if (@Model.Count == 0)
  {
    <h5>No flavors have been added</h5>
  } 

  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
  <hr />
  <p>@Html.ActionLink("Add Flavor", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>