@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor;
<div class="content">
  <h3>Flavor Details</h3>
  <h5>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h5>
  <br>
  @if(@Model.JoinEntities.Count == 0)
  {
    <p>No treats this flavor</p>
  }
  else
  {
    <div class="join_style">
      <h6>Current treats with this flavor profile:</h6>
      <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@join.Treat.Name</li>
        @using (Html.BeginForm("DeleteTreat", "Flavors"))
        {
          @Html.Hidden("joinId", @join.FlavorTreatId)
          <input type="submit" value="Delete" class="btn btn-primary btn-sm"/>
        }
        <br>
      }
      </ul>
    </div>
  }
  <hr />
  <p>@Html.ActionLink("Add Treat", "AddTreat", new { id = Model.FlavorId })</p>
  <p>@Html.ActionLink("Edit Details", "Edit", new { id = Model.FlavorId })</p>
  <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
  <p>@Html.ActionLink("Back to Flavor List", "Index")</p>
</div>
