@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor
<div class="content">
  <h3>Add a Treat</h3>

  <h5>Adding new treat with the following flavor profile: @Html.DisplayFor(model => model.Name)</h5>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId")
    <br>
    <input type="submit" value="Save" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to Flavor List", "Index")</p>
</div